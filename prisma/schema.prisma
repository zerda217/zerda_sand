generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id            Int       @id(map: "user_pk") @unique(map: "user_id_uindex") @default(autoincrement())
  name          String    @unique(map: "user_name_uindex")
  password      String
  level         Int?
  register_date DateTime? @default(now()) @db.Date
  update_date   DateTime? @default(now()) @db.Date
  mail          String?
  todo          todo[]
}

model todo {
  id            Int       @id(map: "todo_pk") @unique(map: "todo_id_uindex") @default(autoincrement())
  title         String?
  article       String?
  register_user Int?
  register_date DateTime? @default(now()) @db.Date
  update_date   DateTime? @default(now()) @db.Date
  category      String?
  complete      Boolean?  @default(false)
  user          user?     @relation(fields: [register_user], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "todo_user_id_fk")
}
